{
  "name"    : "hello electron",
  "version" : "0.0.1",
  "main"    : "main.js",
  "scripts": {
    "start": "electron .",
    "build:all": "electron-packager . --all --overwrite",
	"build:mac": "electron-packager ./ demo --platform=darwin --arch=x64 --overwrite --out ./dist --version=1.4.0",
	"build:win64": "electron-packager ./ demo --platform=win32 --arch=x64 --overwrite --out ./dist --version=1.4.0",
	"build:win32": "electron-packager ./ demo --platform=win32 --arch=ia32 --overwrite --out ./dist --version=1.4.0"
  }
}